<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.eslam.x_ogame.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img4"
        android:layout_weight="1"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:textSize="54sp"
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickBut1"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:textSize="54sp"
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickBut2"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:onClick="onClickBut3"
            android:id="@+id/s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="54sp"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:onClick="onClickBut4"
            android:textSize="54sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/s4"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:onClick="onClickBut5"
            android:textSize="54sp"
            android:id="@+id/s5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:id="@+id/s6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="54sp"
            android:onClick="onClickBut6"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:onClick="onClickBut7"
            android:id="@+id/s7"
            android:layout_width="wrap_content"
            android:textSize="54sp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
        android:onClick="onClickBut8"
        android:textSize="54sp"
        android:id="@+id/s8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1" />

        <Button
        android:onClick="onClickBut9"
        android:textSize="54sp"
        android:id="@+id/s9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2" />

    </GridLayout>

</LinearLayout>
